<div class="container mt-5">
    <h1>Profesores</h1>
    <table id="example" class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Especialidad</th>
                <th>Cursos</th>
                <th>Horarios</th>
                <th>Disponibilidad</th>
                <th>Editar</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            <% profesores.forEach(function(profesor) { %>
            <tr>
                <td><%= profesor.nombre %></td>
                <td><%= profesor.especialidad %></td>
                <td><%= profesor.cursos %></td>
                <td><%= profesor.horarios %></td>
                <td><%= profesor.disponibilidad %></td>
                <td>
                    <button class="btn btn-warning" onclick="editarProfesor('<%= profesor._id %>', '<%= profesor.nombre %>', '<%= profesor.especialidad %>', '<%= profesor.cursos %>', '<%= profesor.horarios %>', '<%= profesor.disponibilidad %>')">Editar</button>
                </td>
                <td>
                    <form action="/profes/delete/<%= profesor._id %>" method="POST">
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <div class="container mt-5">
        <button id="showFormButton" class="btn btn-primary mb-3">Añadir Profesor</button>
        <div id="profesorForm" class="card p-4">
            <h2>Añadir Profesor</h2>
            <form action="/profes" method="POST">
                <div class="mb-3">
